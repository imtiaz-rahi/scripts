				<role>developer</role>
			</roles>
		</developer>
	</developers>
	<issueManagement>
		<system>Bugzilla</system>
		<url>${bugz.url}=${project.artifactId}</url>
	</issueManagement>
	<parent>
		<groupId>com.metafour.maven</groupId>
		<artifactId>maven-parent</artifactId>
		<version>1.0.1</version>
		<relativePath>../maven-parent/</relativePath>
	</parent>
</project>