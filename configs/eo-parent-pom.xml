			<url>https://github.com/noor-siddique-m4</url>
			<roles>
				<role>developer</role>
				<role>maintainer</role>
			</roles>
		</developer>
		<developer>
			<id>mazharul-islam-m4</id>
			<name>Mazharul Islam</name>
			<email>mazharul.islam@metafour.com</email>
			<url>https://github.com/mazharul-islam-m4</url>
